<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="3pt" android:paddingRight="3pt" android:orientation="horizontal">
	

<TextView android:layout_height="wrap_content" android:id="@+id/NameText" android:text="Name" android:layout_width="wrap_content" android:layout_weight="0.5" android:textSize="10pt"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ValueText" android:text="Value" android:layout_weight="0.5" android:textSize="10pt" android:gravity="right" android:textColor="#ffaaaaaa" android:paddingRight="10pt"></TextView>
</LinearLayout>
